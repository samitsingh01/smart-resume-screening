# backend/Dockerfile.enhanced - Optimized
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies (minimal for t2.large)
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies with optimization
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt \
    && pip cache purge

# Download spaCy model (smaller model for memory efficiency)
RUN python -m spacy download en_core_web_sm

# Copy application code
COPY ./app ./app

# Create directories with proper permissions
RUN mkdir -p /app/data /app/uploads \
    && useradd -m -u 1000 appuser \
    && chown -R appuser:appuser /app

USER appuser

# Health check with longer timeout for t2.large
HEALTHCHECK --interval=45s --timeout=30s --start-period=90s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Expose port
EXPOSE 8000

# Run with single worker for t2.large efficiency
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]
